{% extends 'base.html.twig' %}

{% block title %}Groupement index{% endblock %}

{% block body %}
    <h1>Groupement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for groupement in groupements %}
            <tr>
                <td>{{ groupement.id }}</td>
                <td>
                    <a href="{{ path('app_groupement_show', {'id': groupement.id}) }}">show</a>
                    <a href="{{ path('app_groupement_edit', {'id': groupement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_groupement_new') }}">Create new</a>
{% endblock %}
